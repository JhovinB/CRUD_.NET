<Window x:Class="Crud.ManCategoria"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Crud"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="FontFamily" Value="Comic Sans MS"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>
    <Grid >

        <StackPanel>
            <StackPanel>
                <Label Content="Crear una Categoria" />
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <Label x:Name="lblID" HorizontalAlignment="Left">Id</Label>
                <Label HorizontalAlignment="Left">Nombre</Label>
                <TextBox x:Name="txtNombre" Text="Nombre"/>
                <Label HorizontalAlignment="Left">Descripcion</Label>
                <TextBox x:Name="txtDescripcion" Text="Descripcion"/>
                <Button x:Name="btnGrabar" Click="BtnGrabar_Click"  >Grabar</Button>
                <Button x:Name="btnCerrar" Click="BtnCerrar_Click"  >Cerrar</Button>
            </StackPanel>

        </StackPanel>

    </Grid>
</Window>
